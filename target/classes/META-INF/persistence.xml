<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- UnitÃ  di persistenza per la gestione eventi -->
    <persistence-unit name="gestioneeventi" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Classi entity da gestire -->
        <class>it.epicode.entity.Evento</class>
        
        <properties>
            <!-- Configurazione del database PostgreSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gestioneeventi"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            
            <!-- Configurazioni Hibernate -->
            <!-- Rimosso hibernate.dialect - viene rilevato automaticamente da Hibernate -->
            
            <!-- Update automatico delle tabelle -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            
            <!-- Mostra le query SQL nel log -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Configurazioni aggiuntive -->
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Configurazioni del connection pool per migliorare le performance -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.connection.isolation" value="2"/>
            
            <!-- Configurazioni per ottimizzare le performance -->
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.jdbc.batch_versioned_data" value="true"/>
        </properties>
    </persistence-unit>
</persistence>